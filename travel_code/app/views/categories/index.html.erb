<h1><%= t("category.category")%></h1>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead>
    <th>#</th>
    <th><%= t("category.category") %></th>
    <th><%= t("created_by") %></th>
    <th><%= t("created_at") %></th>
    <th><%= t("updated_at") %></th>
    <th><%= t("operate") %></th>
    </thead>

    <tbody>
    <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= category.name %></td>
          <td><%= category.user.name %></td>
          <td><%= time_ago_in_words(category.created_at) %></td>
          <td><%= time_ago_in_words(category.updated_at) %></td>
          <td>
            <%= link_to t("delete"),
                        category_path(category.id),
                        method: :delete,
                        data: {confirm: t("delete_confirm?")},
                        class: 'btn btn-danger' %>

            <%= link_to t("update"),
                        edit_category_path(category.id),
                        class: 'btn btn-primary' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>


  <%= will_paginate %>
</div>