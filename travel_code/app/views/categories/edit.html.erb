<h1><%= t("category.edit") %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@category, url: edit_category_path(@category.id), html: { method: 'put' }) do |f| %>
        <div class="form-group">
          <%= f.label :name, t("category.name"), class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <%= f.submit t("update"), class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>
  </div>
</div>