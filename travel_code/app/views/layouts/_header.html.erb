  <div class="container">
    <%= link_to "sample app", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_page"), root_path %></li>

        <% if logged_in? %>
            <% if current_user.admin %>
                <li><%= link_to t("user.all"), users_path %></li>

                <li class="dropdown">
                  <%= link_to sanitize("#{t('category.category')} <b class='caret'></b>"), "#", { class: "dropdown-toggle", 'data-toggle' => "dropdown" } %>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("category.all"), categories_path %></li>
                    <li><%= link_to t("category.add"), category_new_path %></li>
                  </ul>
                </li>
            <% end %>
            <li class="dropdown">
              <%= link_to sanitize("#{t('attraction.attraction')} <b class='caret'></b>"), "#", { class: "dropdown-toggle", 'data-toggle' => "dropdown" } %>
              <ul class="dropdown-menu">
                <li><%= link_to t("attraction.all"), attractions_path %></li>
                <li><%= link_to '我建立的景點', user_attraction_path(current_user) %></li>
                <li><%= link_to t("attraction.add"), new_attraction_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("account") %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to t("user.profile"), current_user %></li>
                <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t("log_out"), logout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to t("log_in"), log_in_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
