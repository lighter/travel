<h1><%= t("attraction.add") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@attractions) do |f| %>
        <div class="form-group">
          <%= f.label :name, t("attraction.name"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.fields_for :attraction_photos do |att_photo| %>
              <%= att_photo.label :photo, t("attraction.attraction_photo"), class: "col-md-2 control-label" %>
              <div class="col-md-10">
                <%= att_photo.file_field :photo, class: "form-control", multiple: true %>
              </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :longitude, t("attraction.longitude"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= f.number_field :longitude, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :latitude, t("attraction.latitude"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= f.number_field :latitude, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :category_id, t("category.category"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= collection_select(:attraction, :category_id, Category.all, :id, :name, {}, { class: 'form-control' }) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :address, t("attraction.address"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone, t("attraction.phone"), class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit t("create"), class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>
  </div>
</div>