<style>
  .style_image {
    padding: 2px 2px 2px 2px;
    border: 1px solid #ccc;
  }
</style>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @attraction.attraction_photos.each_with_index do |attraction_photo, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if (index == 0) %> class="active"<% end %></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @attraction.attraction_photos.each_with_index do |attraction_photo, index| %>
            <div class="item <% if (index == 0) %> active <% end %>">
              <%= image_tag attraction_photo.photo.thumb.url, style: "border: 1px solid #ccc; padding: 2px 2px 2px 2px;" %>
            </div>
        <% end %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <%= form_for(@attraction) do |f| %>
        <div class="form-group">
          <%= f.label 'Creator', class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.user.name %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.name %></p>
          </div>
        </div>
        

        <div class="form-group">
          <%= f.label :longitude, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.longitude %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :latitude, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.latitude %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :category_id, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.category.name %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :address, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.address %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <p><%= @attraction.phone %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>