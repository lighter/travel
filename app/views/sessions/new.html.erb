<h1>登入</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: log_in_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>記住我</span>
            <% end %>

            <%= f.submit "登入", class: "btn btn-primary" %>
            <%= link_to "facebook 登入", "/auth/facebook", id: "sign_in" %>
        <% end %>

        <p><%= link_to "註冊", sign_up_path %></p>
        <p><%= link_to "忘記密碼", new_password_reset_path %>
    </div>
</div>
