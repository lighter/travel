<h1><%= t("log_in") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: log_in_path) do |f| %>
        <%= f.label :email, t("email") %>
        <%= f.email_field :email %>

        <%= f.label :password, t("password") %>
        <%= f.password_field :password %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t("remember_me")%></span>
        <% end %>

        <%= f.submit t("log_in"), class: "btn btn-primary" %>

    <% end %>

    <br>

    <%= link_to "/auth/facebook", {id: "sign_in", class: "btn btn-block btn-social btn-facebook"}  do %>
        <span class="fa fa-facebook"></span>
        facebook <%= t("log_in") %>
    <% end %>

    <%= link_to "#", {id: "sign_in", class: "btn btn-block btn-social btn-google"}  do %>
        <span class="fa fa-google"></span>
        google <%= t("log_in") %>
    <% end %>

    <p><%= link_to t("sign_up"), sign_up_path %></p>
    <p><%= link_to t("forget_password"), new_password_reset_path %>
  </div>
</div>
