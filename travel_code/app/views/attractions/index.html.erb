<h1>Attractions</h1>

<table class="table table-condensed table-hover">
  <thead>
    <td>#</td>
    <td>Name</td>
    <td>Created by</td>
    <td>Created at</td>
    <td>Updated at</td>
    <td>Method</td>
  </thead>
  <tbody>
    <% @attractions.each_with_index do |attraction, index|  %>
      <tr>
        <td><%= index %></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.user.name%></td>
        <td><%= time_ago_in_words(attraction.created_at)%></td>
        <td><%= time_ago_in_words(attraction.updated_at)%></td>
        <td>
          <%= link_to '刪除',
                      attraction_destroy_path(attraction.id),
                      method: :delete,
                      data: {confirm: '確定刪除?'},
                      class: 'btn btn-danger' %>
          <%= link_to '修改',
                      attraction_path(attraction.id),
                      class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>