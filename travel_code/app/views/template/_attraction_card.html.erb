<div class="col-sm-6 col-md-4">
  <div class="thumbnail">

    <% if attraction.attraction_photos.sample(1).any? %>
        <%= image_tag attraction.attraction_photos.sample(1).first.photo.thumb.url %>
    <% else %>
        <%= image_tag 'https://placem.at/people?w=360&h=360' %>
    <% end %>

    <div class="caption">
      <h3><%= attraction.name %></h3>
      <p>phone: <%= attraction.phone %></p>
      <p>address: <%= attraction.address %></p>
      <p>category: <%= attraction.category.name %></p>
      <p>created by: <%= attraction.user.name %></p>
      <p>
        <% if current_user.favoriting.include?(attraction) %>
            <%= link_to '刪除收藏', "/attractions/#{attraction.id}/unfavorite", class: 'btn btn-danger unfavorite', remote: true, method: :post %>
        <% else %>
            <%= link_to '收藏', "/attractions/#{attraction.id}/favorite", class: 'btn btn-primary favorite', remote: true, method: :post %>
        <% end %>
      </p>
    </div>
  </div>
</div>
